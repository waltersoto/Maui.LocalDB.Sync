<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoSyncApp.MainPage"
             Title="Article Sync Demo">

    <StackLayout Padding="20">
        <Button Text="Clear Articles" Clicked="OnClearClicked" Margin="0,10,0,0"/>
        <Button Text="Sync Articles" Clicked="OnSyncClicked" />
        <CollectionView x:Name="ArticlesList" Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold"/>
                            <Label Text="{Binding LastModified}" FontSize="10" TextColor="Gray"/>

                            <Label Text="{Binding Content}" FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
